        {
            <AuthorizeView>
                <Authorized>
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="@("info/" + Cascadeduser.Id.ToString())">
                            <span class="oi oi-list-rich" aria-hidden="true"></span> Thông tin tài khoản
                        </NavLink>
                    </li>
                </Authorized>
            </AuthorizeView>
}
